{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "~/*": [
        "../*"
      ]
    },
  },
  "include": [
    "**/*.svg",
    "**/*.frag",
    "**/*.vert",
    "**/*.glsl",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules",
  ]
}